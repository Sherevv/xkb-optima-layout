// Typographic Keyboard Layout

default partial
xkb_symbols "base" {

    key <AE07> { [  NoSymbol,      question,   NoSymbol,  NoSymbol  ] }; // "7" // ?

    key <AB08> { [  NoSymbol,     semicolon,   NoSymbol,  NoSymbol  ] }; // "," // ;
    key <AB09> { [  NoSymbol,         colon,   NoSymbol,  NoSymbol  ] }; // "." // :
    key <AB10> { [  NoSymbol,     ampersand,   NoSymbol,  NoSymbol  ] }; // "/" // &
};